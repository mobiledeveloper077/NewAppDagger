<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_host"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.abduvali.newappdagger.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_newDataFragment"
            app:destination="@id/newDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="uz.abduvali.newappdagger.fragments.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="uz.abduvali.newappdagger.fragments.BookmarksFragment"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_bookmarks" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="uz.abduvali.newappdagger.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/newDataFragment"
        android:name="uz.abduvali.newappdagger.fragments.NewDataFragment"
        android:label="fragment_new_data"
        tools:layout="@layout/fragment_new_data" />
</navigation>